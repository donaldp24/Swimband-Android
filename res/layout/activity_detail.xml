<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_lightblue"
                android:id="@+id/layout_parent"
        >

    <RelativeLayout
            android:id="@+id/rl_statusmonitor"
            android:layout_width="320px"
            android:layout_height="64px">
    </RelativeLayout>

    <RelativeLayout
            android:layout_below="@id/rl_statusmonitor"
            android:layout_width="320px"
            android:layout_height="340px"
            android:gravity="center"
            >


        <!-- status mode -->
        <RelativeLayout
                android:id="@+id/rl_status"
                android:layout_width="300px"
                android:layout_height="320px"
                >
            <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/band_detail_background"
                    >
            </ImageView>
            <TextView
                    android:id="@+id/text_name"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="20px"
                    android:layout_width="200px"
                    android:layout_height="30px"
                    android:textSize="15px"
                    android:text="iSwimband-002609"
                    />
            <Button
                    android:id="@+id/btn_edit"
                    android:layout_marginLeft="180px"
                    android:layout_marginTop="14px"
                    android:layout_width="100px"
                    android:layout_height="30px"
                    android:background="@drawable/save_changes_button"
                    android:text="Edit"
                    android:textColor="#ffffff"
                    android:textSize="12px"
                    android:padding="0dp"
                    />

            <ImageView
                    android:layout_marginLeft="12px"
                    android:layout_marginTop="50px"
                    android:layout_width="270px"
                    android:layout_height="1px"
                    android:background="@android:color/white"
                    />




            <!-- status -->
            <TextView
                    android:id="@+id/text_titleforstatus"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="65px"
                    android:layout_width="75px"
                    android:layout_height="30px"
                    android:textSize="13px"
                    android:textStyle="italic"
                    android:text="Status:"
                    android:textColor="@color/for_detailscreen_title"
                    />
            <ImageView
                    android:id="@+id/image_status"
                    android:layout_marginLeft="96px"
                    android:layout_marginTop="63px"
                    android:layout_width="22px"
                    android:layout_height="22px"
                    android:background="@drawable/greenlight_status"
                    />
            <RelativeLayout android:tag="rssiAccessory"
                            android:layout_marginLeft="150px"
                            android:layout_marginTop="52px"
                            android:layout_width="32px"
                            android:layout_height="32px">
                <RelativeLayout
                        android:layout_width="32px"
                        android:layout_height="22px"
                        android:layout_marginLeft="6px"
                        android:layout_marginTop="11px">
                    <ImageView android:id="@+id/image_signal"
                               android:layout_width="fill_parent"
                               android:layout_height="fill_parent"
                               android:background="@drawable/band_meter_3_4"/>
                </RelativeLayout>
            </RelativeLayout>

            <!-- battery -->
            <TextView
                android:id="@+id/text_titleforbattery"
                android:layout_alignLeft="@id/text_titleforstatus"
                android:layout_below="@id/text_titleforstatus"
                android:layout_marginLeft="0px"
                android:layout_marginTop="5px"
                android:layout_width="75px"
                android:layout_height="30px"
                android:textSize="13px"
                android:textStyle="italic"
                android:text="Battery:"
                android:textColor="@color/for_detailscreen_title"
                />
            <TextView
                    android:id="@+id/text_batterylevel"
                    android:layout_alignTop="@id/text_titleforbattery"
                    android:layout_marginLeft="100px"
                    android:layout_width="75px"
                    android:layout_height="30px"
                    android:textSize="13px"
                    android:textStyle="bold"
                    android:text="100%"
                    android:textColor="@color/for_detailscreen_value"
                    />

            <!-- red alert -->
            <TextView
                android:id="@+id/text_titleforredalert"
                android:layout_alignLeft="@id/text_titleforstatus"
                android:layout_below="@id/text_titleforbattery"
                android:layout_marginLeft="0px"
                android:layout_marginTop="5px"
                android:layout_width="75px"
                android:layout_height="30px"
                android:textSize="13px"
                android:textStyle="italic"
                android:text="Red Alert:"
                android:textColor="@color/for_detailscreen_title"
                />
            <TextView
                    android:id="@+id/text_redalert"
                    android:layout_alignLeft="@id/text_batterylevel"
                    android:layout_alignTop="@id/text_titleforredalert"
                    android:layout_width="200px"
                    android:layout_height="30px"
                    android:textSize="13px"
                    android:textStyle="bold"
                    android:text="Non-swimmer - 3"
                    android:textColor="@color/for_detailscreen_value"
                    />

            <!-- warning -->
            <TextView
                android:id="@+id/text_titleforwarning"
                android:layout_alignLeft="@id/text_titleforstatus"
                android:layout_below="@id/text_titleforredalert"
                android:layout_marginLeft="0px"
                android:layout_marginTop="5px"
                android:layout_width="75px"
                android:layout_height="30px"
                android:textSize="13px"
                android:textStyle="italic"
                android:text="Warning:"
                android:textColor="@color/for_detailscreen_title"
                />
            <TextView
                    android:id="@+id/text_warning"
                    android:layout_alignLeft="@id/text_batterylevel"
                    android:layout_alignTop="@id/text_titleforwarning"
                    android:layout_width="200px"
                    android:layout_height="30px"
                    android:textSize="13px"
                    android:textStyle="bold"
                    android:text="Swimmer - 10 seconds"
                    android:textColor="@color/for_detailscreen_value"
                    />

            <!-- firmware version-->
            <TextView
                    android:id="@+id/text_titleforfirmware"
                    android:layout_alignLeft="@id/text_titleforstatus"
                    android:layout_below="@id/text_titleforwarning"
                    android:layout_marginLeft="0px"
                    android:layout_marginTop="5px"
                    android:layout_width="75px"
                    android:layout_height="30px"
                    android:textSize="13px"
                    android:textStyle="italic"
                    android:text="Firmware:"
                    android:textColor="@color/for_detailscreen_title"
                    />
            <TextView
                    android:id="@+id/text_firmware"
                    android:layout_alignLeft="@id/text_batterylevel"
                    android:layout_alignTop="@id/text_titleforfirmware"
                    android:layout_width="200px"
                    android:layout_height="30px"
                    android:textSize="13px"
                    android:textStyle="bold"
                    android:text="Version"
                    android:textColor="@color/for_detailscreen_value"
                    />


            <Button
                    android:id="@+id/btn_disconnect"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="260px"
                    android:layout_width="260px"
                    android:layout_height="30px"
                    android:background="@drawable/save_changes_button"
                    android:text="Disconnect"
                    android:textColor="#ffffff"
                    android:textSize="12px"
                    android:padding="0dp"
                    />

        </RelativeLayout>

        <!-- edit mode -->
        <RelativeLayout
                android:id="@+id/rl_edit"
                android:layout_width="300px"
                android:layout_height="300px"
                android:visibility="invisible"
                >
            <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/band_detail_background"
                    >
            </ImageView>
            <TextView
                    android:id="@+id/text_nameforedit"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="20px"
                    android:layout_width="200px"
                    android:layout_height="30px"
                    android:textSize="15px"
                    android:text="iSwimband-002609"
                    />
            <Button
                    android:id="@+id/btn_save"
                    android:layout_marginLeft="180px"
                    android:layout_marginTop="14px"
                    android:layout_width="100px"
                    android:layout_height="30px"
                    android:background="@drawable/save_changes_button"
                    android:text="Save"
                    android:textColor="#ffffff"
                    android:textSize="12px"
                    android:padding="0dp"
                    />

            <ImageView
                    android:layout_marginLeft="12px"
                    android:layout_marginTop="50px"
                    android:layout_width="270px"
                    android:layout_height="1px"
                    android:background="@android:color/white"
                    />

            <!-- type -->
            <TextView
                    android:id="@+id/text_titlefortype"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="85px"
                    android:layout_width="75px"
                    android:layout_height="30px"
                    android:textSize="13px"
                    android:textStyle="italic"
                    android:text="Type:"
                    android:textColor="@color/for_detailscreen_title"
                    />

            <Button
                android:id="@+id/btn_type1"
                android:layout_marginLeft="100px"
                android:layout_marginTop="80px"
                android:layout_width="95px"
                android:layout_height="30px"
                android:background="@drawable/roundleftblueblue_layout"
                android:text="Non-Swimmer"
                android:textColor="#ffffff"
                android:textSize="12px"
                android:padding="0dp"
                />
            <Button
                    android:id="@+id/btn_type2"
                    android:layout_toRightOf="@id/btn_type1"
                    android:layout_marginLeft="0px"
                    android:layout_marginTop="80px"
                    android:layout_width="95px"
                    android:layout_height="30px"
                    android:background="@drawable/roundrightbluegray_layout"
                    android:text="Swimmer"
                    android:textColor="#3f3f3f"
                    android:textSize="12px"
                    android:padding="0dp"
                    />

            <RelativeLayout
                    android:id="@+id/rl_editTimeInfoContainer"
                    android:layout_marginLeft="0px"
                    android:layout_marginTop="110px"
                    android:layout_width="fill_parent"
                    android:layout_height="220px">
                <!-- red alert -->
                <TextView
                        android:id="@+id/text_titleforredalert_editmode"
                        android:layout_marginLeft="20px"
                        android:layout_marginTop="25px"
                        android:layout_width="75px"
                        android:layout_height="30px"
                        android:textSize="13px"
                        android:textStyle="italic"
                        android:text="Red Alert:"
                        android:textColor="@color/for_detailscreen_title"
                        />
                <Button
                        android:id="@+id/btn_redalert"
                        android:layout_marginLeft="100px"
                        android:layout_marginTop="18px"
                        android:layout_width="190px"
                        android:layout_height="30px"
                        android:background="@drawable/segment_not_selected"
                        android:text="10 seconds"
                        android:textColor="@color/for_detailscreen_value"
                        android:textSize="12px"
                        android:padding="0dp"
                        />


                <!-- warning -->
                <TextView
                        android:id="@+id/text_titleforwarning_editmode"
                        android:layout_below="@id/text_titleforredalert_editmode"
                        android:layout_marginLeft="20px"
                        android:layout_marginTop="25px"
                        android:layout_width="75px"
                        android:layout_height="30px"
                        android:textSize="13px"
                        android:textStyle="italic"
                        android:text="Warning:"
                        android:textColor="@color/for_detailscreen_title"
                        />
                <Button
                        android:id="@+id/btn_warning"
                        android:layout_marginLeft="100px"
                        android:layout_marginTop="75px"
                        android:layout_width="190px"
                        android:layout_height="30px"
                        android:background="@drawable/segment_not_selected"
                        android:text="Immediate"
                        android:textColor="@color/for_detailscreen_value"
                        android:textSize="12px"
                        android:padding="0dp"
                        />
            </RelativeLayout>


        </RelativeLayout>
        <!-- end edit mode -->

    </RelativeLayout>

</RelativeLayout>
