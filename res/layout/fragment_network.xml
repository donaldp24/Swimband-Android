<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_parent"
    >

    <RelativeLayout
            android:id="@+id/rl_statusmonitor"
            android:layout_width="320px"
            android:layout_height="64px">
    </RelativeLayout>

    <LinearLayout
            android:layout_below="@id/rl_statusmonitor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rl_segment"
            >
        <Button
                android:id="@+id/btn_type1"
                android:layout_marginLeft="3px"
                android:layout_width="102px"
                android:layout_height="40px"
                android:background="@drawable/roundleftblueblue_layout"
                android:text="Available"
                android:textColor="#ffffff"
                android:textSize="12px"
                android:padding="0dp"
                />
        <Button
                android:id="@+id/btn_type2"
                android:layout_toRightOf="@id/btn_type1"
                android:layout_marginLeft="0px"
                android:layout_width="102px"
                android:layout_height="40px"
                android:background="@drawable/rectbluegray_layout"
                android:text="Viewwing"
                android:textColor="#3f3f3f"
                android:textSize="12px"
                android:padding="0dp"
                />
        <Button
                android:id="@+id/btn_type3"
                android:layout_toRightOf="@id/btn_type2"
                android:layout_marginLeft="0px"
                android:layout_width="102px"
                android:layout_height="40px"
                android:background="@drawable/roundrightbluegray_layout"
                android:text="Observers"
                android:textColor="#3f3f3f"
                android:textSize="12px"
                android:padding="0dp"
                />
    </LinearLayout>

    <ListView
      android:id="@+id/band_list"
      android:layout_below="@id/rl_segment"
      android:layout_marginTop="10px"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
            />

</RelativeLayout>
