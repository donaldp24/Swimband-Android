<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="320px"
              android:layout_height="64px"
              android:orientation="vertical"
              android:background="@drawable/current_status_bar"
              android:id="@+id/layout_parent"
        >


    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:orientation="vertical"
            >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="21px"
                android:textStyle="italic"
                android:textColor="@android:color/black"
                android:text="Current Status Monitor"
                android:textSize="13px"
                android:gravity="center"
                />
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="43px"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <LinearLayout
                    android:layout_width="106px"
                    android:layout_height="31px"
                    >
                <ImageView
                        android:layout_width="31px"
                        android:layout_height="31px"
                        android:src="@drawable/greenlight_status"
                        />
                <TextView
                        android:id="@+id/text_normalcount"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:textStyle="italic"
                        android:paddingLeft="3dp"
                        android:text="00"
                        android:textSize="13px"
                        android:gravity="center_vertical"
                        />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="106px"
                    android:layout_height="31px"
                    >
                <ImageView
                        android:layout_width="31px"
                        android:layout_height="31px"
                        android:src="@drawable/yellowlight_status"
                        />
                <TextView
                        android:id="@+id/text_cautioncount"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:paddingLeft="3dp"
                        android:textStyle="italic"
                        android:text="00"
                        android:textSize="13px"
                        android:gravity="center_vertical"
                        />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="108px"
                    android:layout_height="31px"
                    >
                <ImageView
                        android:layout_width="31px"
                        android:layout_height="31px"
                        android:src="@drawable/redlight_status"
                        />
                <TextView
                        android:id="@+id/text_urgentcount"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:paddingLeft="3dp"
                        android:textStyle="italic"
                        android:text="00"
                        android:textSize="13px"
                        android:gravity="center_vertical"
                        />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>